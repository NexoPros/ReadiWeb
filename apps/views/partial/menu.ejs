<nav class="navbar">
  <a href="/home" class="logo">ComicVerse</a>
  <div class="menu-icon">☰</div>
  <ul class="nav-links">
    <% if (typeof currentUser !== 'undefined' && currentUser) { %>
    <li class="dropdown profile-dropdown">
      <a href="/profile" class="profile-icon">
        <i class="fas fa-user"></i> <%= currentUser.username %> (<%=
        currentUser.role %>)
      </a>
      <div class="dropdown-content">
        <a href="/profile"><i class="fas fa-id-card"></i> Trang Hồ sơ</a>
        <a href="/bookmarks"><i class="fas fa-bookmark"></i> Truyện đã lưu</a>

        <%# --- Link chức năng theo Role --- %> <% if (currentUser.role ===
        'admin') { %> <%# Tách dòng if %>
        <a href="/comics/post"><i class="fas fa-upload"></i> Đăng truyện</a>
        <a href="/admin"><i class="fas fa-tachometer-alt"></i> Trang Admin</a>
        <% } else if (currentUser.role === 'uploader') { %>
        <a href="/comics/post"><i class="fas fa-upload"></i> Đăng truyện</a>
        <a href="/uploader"><i class="fas fa-list-alt"></i> Truyện của tôi</a>
        <%# Link về trang uploader %> <% } %> <%# Tách thẻ đóng của else if %>
        <%# --------------------------------- %>

        <a href="/profile/settings"><i class="fas fa-cog"></i> Cài đặt</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
      </div>
    </li>
    <% } else { %>
    <li class="dropdown profile-dropdown">
      <a href="#" class="profile-icon"><i class="fas fa-user"></i> Tài khoản</a>
      <div class="dropdown-content">
        <a href="/login"><i class="fas fa-sign-in-alt"></i> Đăng nhập</a>
        <a href="/register"><i class="fas fa-user-plus"></i> Đăng ký</a>
      </div>
    </li>
    <% } %>
  </ul>
</nav>
