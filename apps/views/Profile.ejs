                    <span>41%</span>
                  </div>
                  <div class="progress-bar">
                    <div class="progress-fill" style="width: 41%"></div>
                  </div>
                </div>
                <a href="#" class="continue-reading">Continue Reading</a>
              </div>
            </div>


      <!-- Bookmarks tab content -->
      <div id="bookmarks-tab" class="tab-content">
        <div class="section-header">
          <h2 class="section-title">My Bookmarks</h2>
          <span class="section-action">64 Comics</span>
        </div>



        <div class="pagination">
          <!-- Pagination content would go here -->
        </div>
      </div>

      <!-- Comments tab content -->
