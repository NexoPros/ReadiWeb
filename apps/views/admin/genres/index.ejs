<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Quản lý Thể Loại' %> - Admin
    </title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/style.css" />
    <style>
      .content {
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('../../partial/menu'); %>
    <main class="container-fluid">
      <div class="row">
        <div class="col-12 px-md-4 content">
          <%- include('../../partial/flash'); %>
          <div
            class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2"
          >
            <h1>
              <%= typeof title !== 'undefined' ? title : 'Quản lý Thể Loại' %>
            </h1>
            <a href="/admin/genres/create" class="btn btn-primary">
              <i class="fas fa-plus"></i> Thêm Thể Loại mới
            </a>
          </div>

          <div class="card shadow-sm">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover table-striped">
                  <thead class="table-light">
                    <tr>
                      <th scope="col">Tên Thể Loại</th>
                      <th scope="col" class="text-end">Hành động</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (typeof genres !== 'undefined' && genres.length > 0) {
                    %> <% genres.forEach(genre => { %>
                    <tr>
                      <td><%= genre.name %></td>
                      <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                          <a
                            href="/admin/genres/edit/<%= genre._id %>"
                            class="btn btn-outline-primary"
                            title="Sửa"
                          >
                            <i class="fas fa-edit"></i> Sửa
                          </a>
                          <form
                            action="/admin/genres/delete/<%= genre._id %>"
                            method="POST"
                            style="display: inline"
                            onsubmit="return confirm('Bạn chắc chắn muốn xóa thể loại: <%= genre.name %>?');"
                          >
                            <button
                              type="submit"
                              class="btn btn-outline-danger"
                              title="Xóa"
                            >
                              <i class="fas fa-trash"></i> Xóa
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %> <% } else { %>
                    <tr>
                      <td
                        colspan="2"
                        class="text-center fst-italic text-muted py-3"
                      >
                        Chưa có thể loại nào. Hãy thêm mới!
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
  </body>
</html>
